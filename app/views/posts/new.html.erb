<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規レシピ作成
      </h1>
    </div>
  </div>
</section>

<% if @post.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">


        <%= form_for @post do |f| %>
          <div class="field">
            <%= f.label :title, "作品名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "説明", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <div class="check_box">
            <span>タグ</span>
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
             <div>
               <%= tag.label do %>
                 <%= tag.check_box %>
                 <%= tag.text %>
               <% end %>
             </div>
           <% end %>
          </div>

          <%#<div class="field">
          <%= f.label :tag_ids, "タグ", class: "label"
             <%= f.text_field :tag_ids, class: "input", id:'tag_ids',\
             placeholder: "複数つけるには','で区切ってください。"
          </div>%>


          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
